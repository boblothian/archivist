<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>CFBundleDevelopmentRegion</key>
		<string>$(DEVELOPMENT_LANGUAGE)</string>
		<key>CFBundleDisplayName</key>
		<string>ArchiveReader</string>
		<key>CFBundleExecutable</key>
		<string>$(EXECUTABLE_NAME)</string>
		<key>CFBundleIdentifier</key>
		<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
		<key>CFBundleInfoDictionaryVersion</key>
		<string>6.0</string>
		<key>CFBundleName</key>
		<string>archivereader</string>
		<key>CFBundlePackageType</key>
		<string>APPL</string>
		<key>CFBundleShortVersionString</key>
		<string>1.0.0</string>
		<key>CFBundleVersion</key>
		<string>1</string>
		<key>LSRequiresIPhoneOS</key>
		<true/>
		<!-- Launch storyboard (native splash that shows instantly) -->
		<key>UILaunchStoryboardName</key>
		<string>LaunchScreen</string>
		<!-- Keep Main storyboard key (Flutter template still includes it) -->
		<key>UIMainStoryboardFile</key>
		<string>Main</string>
		<!-- Flutter scene setup -->
		<key>UIApplicationSceneManifest</key>
		<dict>
			<key>UIApplicationSupportsMultipleScenes</key>
			<false/>
			<key>UISceneConfigurations</key>
			<dict>
				<key>UIWindowSceneSessionRoleApplication</key>
				<array>
					<dict>
						<key>UISceneConfigurationName</key>
						<string>Default Configuration</string>
						<key>UISceneDelegateClassName</key>
						<string>FlutterSceneDelegate</string>
					</dict>
				</array>
			</dict>
		</dict>
		<!-- Orientations -->
		<key>UISupportedInterfaceOrientations</key>
		<array>
			<string>UIInterfaceOrientationPortrait</string>
			<string>UIInterfaceOrientationPortraitUpsideDown</string>
			<string>UIInterfaceOrientationLandscapeLeft</string>
			<string>UIInterfaceOrientationLandscapeRight</string>
		</array>
		<!-- Flutter / performance -->
		<key>UIApplicationSupportsIndirectInputEvents</key>
		<true/>
		<key>CADisableMinimumFrameDurationOnPhone</key>
		<true/>
		<key>UIStatusBarHidden</key>
		<false/>
		<!-- Local network + Bonjour for bonsoir / DLNA / cast -->
		<key>NSLocalNetworkUsageDescription</key>
		<string>This app discovers and connects to devices on your local network for media sharing and casting.</string>
		<key>NSBonjourServices</key>
		<array>
			<string>_googlecast._tcp</string>
			<string>_airplay._tcp</string>
			<string>_http._tcp</string>
			<string>_dlna._tcp</string>
		</array>
		<!-- Optional privacy texts used by your deps -->
		<key>NSCameraUsageDescription</key>
		<string>This app may use the camera for scanning or ML features.</string>
		<key>NSMicrophoneUsageDescription</key>
		<string>This app may use the microphone when needed for media playback.</string>
		<key>NSPhotoLibraryUsageDescription</key>
		<string>This app may access your photo library for saving or opening media files.</string>
		<!-- Query schemes for url_launcher / external players -->
		<key>LSApplicationQueriesSchemes</key>
		<array>
			<string>vlc</string>
			<string>vlc-x-callback</string>
			<string>infuse</string>
			<string>infuse-pro</string>
			<string>nplayer</string>
			<string>nplayer-http</string>
			<string>ftp</string>
			<string>ftps</string>
			<string>http</string>
			<string>https</string>
			<string>mailto</string>
			<string>file</string>
			<string>chrome</string>
			<string>googlechrome</string>
		</array>
		<!-- MetricKit opt-out (your original setting) -->
		<key>NSMetricKitOptOut</key>
		<true/>
	</dict>
</plist>

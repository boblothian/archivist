<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <!-- Local Network permission (iOS 14+) for bonsoir/casting/DLNA -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>This app discovers and connects to devices on your local network.</string>

    <!-- Bonjour service types you may browse/advertise -->
    <key>NSBonjourServices</key>
    <array>
        <string>_googlecast._tcp</string>
        <string>_airplay._tcp</string>
        <string>_http._tcp</string>
        <string>_dlna._tcp</string>
    </array>

    <key>NSMetricKitOptOut</key>
    <true/>

    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleDisplayName</key>
    <string>Archivist</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>archivist</string>
    <key>CFBundleShortVersionString</key>
    <string>0.0.1</string>
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- Allow checking/launching popular video player apps by scheme -->
    <key>LSApplicationQueriesSchemes</key>
    <array>
        <!-- VLC -->
        <string>vlc</string>
        <string>vlc-x-callback</string>
        <!-- Infuse -->
        <string>infuse</string>
        <string>infuse-pro</string>
        <!-- NPlayer -->
        <string>nplayer</string>
        <string>nplayer-http</string>
        <!-- Generic (used by some players) -->
        <string>ftp</string>
        <string>ftps</string>
    </array>

    <!-- Launch screen only (no main storyboard) -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- Flutter scene configuration (iOS 13+) -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict>
            <key>UIWindowSceneSessionRoleApplication</key>
            <array>
                <dict>
                    <key>UISceneConfigurationName</key>
                    <string>Default Configuration</string>
                    <key>UISceneDelegateClassName</key>
                    <string>FlutterSceneDelegate</string>
                </dict>
            </array>
        </dict>
    </dict>

    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <key>CADisableMinimumFrameDurationOnPhone</key>
    <true/>
    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>
    <key>UIStatusBarHidden</key>
    <false/>
</dict>
</plist>
